extends layout

block content
  .logo(align='left')
    img(src='../img/innova.png', border='0', align='left')
  .mainh(align='right') Innova.host
  .slogan(align='right') Innova [INN] powered statistics node in NodeJS.
  hr
  .row
    .col-md-4(align='center')
      | Current Block Height
      .statxl.animated.flipInX #{blockcount}
    .col-md-4(align='center')
      | Innova Hybrid Fortuna Stakes Online:
      .statxl.animated.flipInX #{count}
    .col-md-4(align='center')
      | Total INN Locked in Fortuna Stakes:
      .statxl.animated.flipInX #{totallockedup}
  hr
  .row
    .col-md-4(align='center')
      | Current Innova in Circulation:
      .statlg.animated.flipInX #{totalsupply}
      | INN
    .col-md-4(align='center')
      | Innova Network Hashrate:
      .statlg.animated.flipInX #{hashespersec}
      | GigaHashes per sec
    .col-md-4(align='center')
      | Max Innova Supply:
      .statlg.animated.flipInX 10,000,000
      | INN
  hr
  .row
    .col-md-3(align='center')
      | Innova Current USD Price:
      .statmd.animated.flipInX $#{usd}
    .col-md-3(align='center')
      | Innova Current BTC Price:
      .statmd.animated.flipInX #{btc}
    .col-md-3(align='center')
      | Current Fortuna Stake USD Price:
      .statmd.animated.flipInX $#{totalmnusd}
    .col-md-3(align='center')
      | Current Fortuna Stake BTC Price:
      .statmd.animated.flipInX #{totalmnbtc} BTC
  hr
  .row
    .col-md-3(align='center')
      | Total INN Atomic Swaps:
      .statmd.animated.flipInX #{totalswaps}
    .col-md-3(align='center')
      | Total INN Atomic Volume:
      .statmd.animated.flipInX #{totalasvol}
    .col-md-3(align='center')
      | Total INN "Bob" Atomic Swaps:
      .statmd.animated.flipInX #{bobswaps}
    .col-md-3(align='center')
      | Total INN "Alice" Atomic Swaps:
      .statmd.animated.flipInX #{aliceswaps}
  hr
  .row
    .col-md-4(align='center')
      | Total Market Cap:
      .statmd.animated.flipInX $#{marketcap}
    .col-md-4(align='center')
      | 24hr Daily Volume:
      .statmd.animated.flipInX $#{dailyvol}
    .col-md-4(align='center')
      | INN Fortuna Stake Cost:
      .statmd.animated.flipInX 25000 INN
  hr
  .row
    .col-md-4(align='center')
      | INN PoW Difficulty:
      .statmd.animated.flipInX #{powdiff}
    .col-md-4(align='center')
      | INN PoS Difficulty:
      .statmd.animated.flipInX #{posdiff}
    .col-md-4(align='center')
      | INN PoS Network Weight:
      .statmd.animated.flipInX #{posweight}
  hr
  .row
    .col-md-3(align='center')
      | INN PoS Interest:
      .statmd.animated.flipInX 6%
    .col-md-3(align='center')
      | INN CN Interest:
      .statmd.animated.flipInX 33%
    .col-md-3(align='center')
      | Total CN Percentage of Supply:
      .statmd.animated.flipInX #{mnsupplypercent}%
    .col-md-3(align='center')
      | Time since Genesis:
      .statmd.animated.flipInX #{genesistime}
  hr
  .row
    .col-md-4(align='center')
      | Current Innova Client Version:
      .statmd.animated.flipInX #{clientversion}
    .col-md-4(align='center')
      | Current Innova Protocol:
      .statmd.animated.flipInX #{clientproto}
    .col-md-4(align='center')
      | Connections to this node:
      .statmd.animated.flipInX #{connections}
  hr
  .mainh(align='center') Innova Hybrid Fortuna Stake List
  hr
  each pubkey, index in masternodeadds
    .row
      .col-md-12(align='center')
        a(href='https://chainz.cryptoid.info/d/address.dws?' + pubkey, target='_blank')
          .list= pubkey
